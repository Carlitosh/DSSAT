citHeader("When using the 'DSSAT' package for publications please cite all of the following:")

year <- sub("-.*","",meta$Date)
note <- sprintf("R package version %s.", meta$Version)

citEntry(entry = "Manual",
         title = "{DSSAT}: {A }Comprehensive {R }Interface for the {DSSAT Cropping Systems Model}",
         author = c(person(c("Phillip","D"),"Alderman")),
         year = year,
         note = note,
         url = "https://CRAN.R-project.org/package=DSSAT",
         textVersion = paste("Alderman, Phillip D. 2021.",
         "DSSAT: A Comprehensive R Interface for the DSSAT Cropping Systems Model.",
         note,
         "https://CRAN.R-project.org/package=DSSAT.")
)

